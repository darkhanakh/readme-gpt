{
  "name": "README Writer",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Chrome extension to write README.md files for GitHub repos",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "all_frames": false,
      "js": ["./content.js"]
    }
  ],
  "background": {
    "service_worker": "./background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies"
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
